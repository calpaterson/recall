#!/bin/sh
set -e

CONFIG_FILE=/usr/share/recall/www/config.js
EXAMPLE_CONFIG_FILE=/usr/share/recall/www/config.js.example

if [ ! -f $CONFIG_FILE ]
then
    echo "Config file not found, using default config file"
    mv $EXAMPLE_CONFIG_FILE $CONFIG_FILE
else
    echo "Config file already installed, reusing"
fi

echo "Building environement..."
virtualenv --python=python2 /var/recall/environment/
. /var/recall/environment/bin/activate
pip install /usr/share/recall/bundle.zip
deactivate
echo "...done"

